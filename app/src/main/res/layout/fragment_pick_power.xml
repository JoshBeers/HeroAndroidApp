<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devslopes.herome.Fragments.MainFragment"
    android:background="@drawable/hero_bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick A Power"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#FAC740"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="TURTLE POWER"
            android:id="@+id/a1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/lightning"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="LIGHTNING"
            android:id="@+id/a2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/atomic"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="FLIGHT"
            android:id="@+id/a3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/rocket"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="WEB SLINGING"
            android:id="@+id/a4"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/rocket"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="LASER VISION"
            android:id="@+id/a5"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/rocket"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="SUPER STRENGTH"
            android:id="@+id/a6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:textColor="#FAC740"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/rocket"
            android:paddingLeft="5dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="SHOW BACKSTORY"
            android:id="@+id/yes"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_solid_button"
            android:textColor="#10161D"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:backgroundTint="#FAC740"
            android:textSize="22dp" />

 =

    </LinearLayout>

</FrameLayout>
